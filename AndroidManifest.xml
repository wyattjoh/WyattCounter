            android:name="com.wyattjohnson.wyatt_notes.CounterListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wyattjohnson.wyatt_notes.CounterListDetailActivity"
            android:label="@string/title_activity_counter_list_detail"
            android:parentActivityName="com.wyattjohnson.wyatt_notes.CounterListActivity" >
